struct question
{
    string question_text = "Empty", answer = "No answer yet";
    int question_id = -1;
    int to_id = -1, from_id = -1;
    vector <thread> threads;
};

struct thread
{
    string question, answer = "No answer yet";
    int to_id, from_id;
    int thread_id;
};

struct user
{
    string user_name = "", name = "", email = "";
    int password = -1, id = -1;
    bool AQ;
};
